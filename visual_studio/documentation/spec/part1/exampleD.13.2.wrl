#VRML V2.0 utf8
Group { 
    children [
        DEF Hour TimeSensor {
            loop TRUE
            cycleInterval 3600.0      # 60*60 seconds == 1 hour
        }
        DEF Sounder Sound {
            source AudioClip {
                url "click.wav" }
            }
        }
    ]
}
ROUTE Hour.cycleTime TO Sounder.startTime